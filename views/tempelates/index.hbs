        }

        .search-input {
            padding: 0.5rem;
            border: 1px solid var(--primary-color);
            border-radius: 5px;
            width: 70%;
            font-size: 1rem;
            outline: none;
            transition: border-color 0.3s ease;
        }

        .search-input:focus {
            border-color: var(--secondary-color);
        }

        .search-button {
            padding: 0.5rem 1rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 0.5rem;
            transition: background-color 0.3s ease;
        }

        .search-button:hover {
            background-color: var(--secondary-color);
        }

        footer {
            margin-top: 2rem;
            color: #666;
        }

        @media (max-width: 600px) {
            h1 {
                font-size: 2rem;
            }

            p {
                font-size: 1rem;
            }

            .search-input {
                width: 60%;
            }
        }
    </style>
